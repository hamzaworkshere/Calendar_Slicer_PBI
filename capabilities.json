{
  "privileges": [],
  "dataRoles": [
    {
      "name": "date",
      "kind": "Grouping",
      "displayName": "Date",
      "description": "Bind to your Date table [Date] column."
    }
  ],
  "dataViewMappings": [
    {
      "categorical": {
        "categories": {
          "for": { "in": "date" },
          "dataReductionAlgorithm": { "top": {} }
        }
      }
    }
  ],
  "objects": {
    "calendarSettings": {
      "displayName": "Calendar",
      "properties": {
        "startOfWeek": {
          "displayName": "Start of week",
          "type": {
            "enumeration": [
              { "value": "Sunday", "displayName": "Sunday" },
              { "value": "Monday", "displayName": "Monday" }
            ]
          }
        },
        "showWeekNumbers": { "displayName": "Show week numbers", "type": { "bool": true } },
        "showDOWHeader":  { "displayName": "Show day-of-week header", "type": { "bool": true } },
        "otherMonthFade": { "displayName": "Fade other-month days", "type": { "bool": true } }
      }
    },
    "headerSettings": {
      "displayName": "Header & Colors",
      "properties": {
        "showHeader":       { "displayName": "Show header", "type": { "bool": true } },
        "title":            { "displayName": "Title", "type": { "text": true } },
        "accentColor":      { "displayName": "Accent color", "type": { "fill": { "solid": { "color": true } } } },
        "textColor":        { "displayName": "Text color", "type": { "fill": { "solid": { "color": true } } } },
        "headerBackground": { "displayName": "Header background", "type": { "fill": { "solid": { "color": true } } } },
        "fontSize":         { "displayName": "Font size", "type": { "formatting": { "fontSize": true } } },
        "showClear":        { "displayName": "Show clear button", "type": { "bool": true } }
      }
    },
    "itemSettings": {
      "displayName": "Items",
      "properties": {
        "fontSize":      { "displayName": "Font size", "type": { "formatting": { "fontSize": true } } },
        "color":         { "displayName": "Text color", "type": { "fill": { "solid": { "color": true } } } },
        "selectedColor": { "displayName": "Selected color", "type": { "fill": { "solid": { "color": true } } } },
        "boldSelected":  { "displayName": "Bold selected", "type": { "bool": true } }
      }
    },
    "selectionSettings": {
      "displayName": "Selection",
      "properties": {
        "multiSelect":     { "displayName": "Enable multi-select", "type": { "bool": true } },
        "rangeSelect":     { "displayName": "Shift+Click range select", "type": { "bool": true } },
        "stickySelection": { "displayName": "Sticky selection (no clear on outside click)", "type": { "bool": true } }
      }
    },
    "dateRange": {
      "displayName": "Date range",
      "properties": {
        "respectDataRange": { "displayName": "Restrict to data dates", "type": { "bool": true } },
        "minDate":          { "displayName": "Min date (YYYY-MM-DD)", "type": { "text": true } },
        "maxDate":          { "displayName": "Max date (YYYY-MM-DD)", "type": { "text": true } }
      }
    }
  },
  "suppressDefaultTitle": true,
  "supportsHighlight": false
}
